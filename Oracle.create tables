-- Create Student Table
CREATE TABLE Student (
StudentID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
StudentFirstName NVARCHAR2(50) NOT NULL,
StudentLastName NVARCHAR2(50) NOT NULL,
StudentAddress NVARCHAR2(100) NOT NULL,
Province NVARCHAR2(50) NOT NULL,
Country NVARCHAR2(50),
AddressType NVARCHAR2(50),
StudentPhone NVARCHAR2(20),
PhoneType NVARCHAR2(50) DEFAULT 'Not provided',
ProgramID NUMBER(10) REFERENCES Program(ProgramID)
);

-- Create Course Table
CREATE TABLE Course (
CourseID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
CourseName NVARCHAR2(100) NOT NULL,
TuitionAmount NUMBER(10),
SectionID NUMBER(10) REFERENCES Section(SectionID),
PercentGrade DECIMAL(5,1),
LetterGrade AS (CASE 
WHEN PercentGrade >= 90 THEN 'A'
WHEN PercentGrade >= 80 THEN 'B'
WHEN PercentGrade >= 70 THEN 'C'
WHEN PercentGrade >= 60 THEN 'D'
ELSE 'F'
END
) VIRTUAL,
ProgramID NUMBER(10) REFERENCES Program(ProgramID)
);

-- Create Professor Table
CREATE TABLE Professor (
ProfessorID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
ProfessorFirstName NVARCHAR2(50) NOT NULL,
ProfessorLastName NVARCHAR2(50) NOT NULL,
Saluation NVARCHAR2(10) DEFAULT 'DR',
ProgramName NVARCHAR2(50) DEFAULT 'Data Science',
CourseID NUMBER(10) REFERENCES Course(CourseID),
SectionID NUMBER(10) REFERENCES Section(SectionID)
);

-- Create Program Table
CREATE TABLE Program (
ProgramID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
ProgramName NVARCHAR2(50) NOT NULL
);

-- Create Department Table
CREATE TABLE Department (
DepartmentID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
DepartmentName NVARCHAR2(100) NOT NULL,
Degree NVARCHAR2(50) NOT NULL,
ProgramID NUMBER(10) REFERENCES Program(ProgramID)
);

-- Create Section Table
CREATE TABLE Section (
SectionID NUMBER(10) GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
SectionName NUMBER(10)
);
